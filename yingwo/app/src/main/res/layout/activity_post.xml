<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/app_toolbar"></include>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/background"
        android:layout_above="@+id/tv_end">

        <com.yingwo.yingwo.View.AutoLoadRecyclerView
            android:id="@+id/rv_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <!--</LinearLayout>-->
    <!--</ScrollView>-->
    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="12dp"
        android:text="-End-"
        android:visibility="gone"
        android:textColor="@color/textcolor2"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:id="@+id/post_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/post_content_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/command_item"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:layout_weight="7"
            android:background="@mipmap/pinglunkuang_1"
            android:onClick="buildItem"
            android:orientation="horizontal">

        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/heart_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/block_keyboardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/btn_emoj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/emoji" />


        <EditText
            android:imeOptions="actionSend"
            android:inputType="text"
            android:id="@+id/tv_input"
            android:background="@drawable/post_reply_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="3dp"/>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:layout_scrollFlags="scroll|enterAlways" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="我"
            android:fontFamily="sans-serif"
            android:textSize="18sp"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@mipmap/input_mid"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="62.5dp"
            android:layout_height="62.5dp"
            android:layout_marginLeft="22.5dp"
            android:layout_gravity="center"
            android:src="@mipmap/headdefault"></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="22.5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_userid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/textcolor"
                    android:text="Kinsomy"/>
                <ImageView
                    android:id="@+id/iv_usersex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.5dp"
                    android:src="@mipmap/man"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_userdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/textcolor1"
                android:text="屌屌得Kinsomy"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow"
            android:layout_marginRight="25dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:background="@mipmap/input_text"
        android:layout_marginRight="10dp"
        android:paddingTop="11dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/block_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_friendsnum"
                android:textSize="17sp"
                android:textColor="@color/app_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:textSize="14sp"
                android:textColor="@color/textcolor1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/block_attentions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_attentionssnum"
                android:textSize="17sp"
                android:textColor="@color/app_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="14sp"
                android:textColor="@color/textcolor1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/block_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_fansnum"
                android:textSize="17sp"
                android:textColor="@color/app_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textSize="14sp"
                android:textColor="@color/textcolor1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/block_visitors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_visitorsnum"
                android:textSize="17sp"
                android:textColor="@color/app_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="268"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="访客"
                android:textSize="14sp"
                android:textColor="@color/textcolor1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/block_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@mipmap/input_top"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jinghao"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="@color/textcolor1"
                android:layout_marginLeft="15dp"
                android:text="我的话题"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/block_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@mipmap/input_mid"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/note"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="@color/textcolor1"
                android:layout_marginLeft="15dp"
                android:text="我的帖子"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/block_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@mipmap/input_mid"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mes"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="@color/textcolor1"
                android:layout_marginLeft="15dp"
                android:text="我的评论"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/block_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@mipmap/input_col"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/heart"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="@color/textcolor1"
                android:layout_marginLeft="15dp"
                android:text="我的点赞"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_marginBottom="7.5dp"></LinearLayout>


</LinearLayout>